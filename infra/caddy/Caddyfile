spacefestival.fun {
  encode zstd gzip
  handle /telegram/webhook {
    reverse_proxy api:8080
  }
  handle_path /api/* {
    reverse_proxy api:8080
  }
  # Flutter web app lives on /space_app.
  handle /space_app* {
    reverse_proxy flutter_frontend:80
  }
  # Landing is served on root, and remaining static assets are also from Flutter build.
  handle {
    reverse_proxy flutter_frontend:80
  }
}

www.spacefestival.fun {
  redir https://spacefestival.fun{uri} permanent
}
